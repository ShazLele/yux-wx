@import "../../plugins/wangEditor/wangEditor.wxss";

.view-main {
  padding: 20rpx;
  font-size: 32rpx;
  line-height: 1.5;
  word-break: break-all;
  text-align: justify;
}

.view-main>view {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.article-title {
  font-size: 40rpx;
  display: block;
  padding-bottom: 20rpx;
}

.article-author {
  font-size: 32rpx;
  color: #aaa;
  border-bottom: 2rpx solid #ddd;
}

.article-author text {
  display: inline-block;
  padding-right: 20rpx;
}

.article-desc {
  border-bottom: 2rpx solid #ddd;
  color: #333;
}

