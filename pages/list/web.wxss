.view-list {
  margin: 0;
  padding: 0;
  font-family: 黑体;
}

.list-loadtxt {
  text-align: center;
  font-size: 30rpx;
  padding: 16rpx;
}

.list-article {
  display: flex;
  flex-direction: row;
  padding: 24rpx 15rpx;
  border-bottom: 1px solid #ddd;
  font-size: 30rpx;
}

.list-article .article-content {
  flex: 7;
  overflow: hidden;
  padding-right: 10rpx;
  word-break: break-all;
}

.list-article .article-content .title {
  width: 100%;
  font-size: 36rpx;
  display: block;
  margin-bottom: 9rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #263238;
}

.list-article .article-content .desc {
  color: #9e9e9e;
  height: 108rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 15rpx;
  line-height: 1.8;
}

.list-article .article-content .info {
  margin-top: 10rpx;
  color: #009688;
}

.list-article .article-content .info text {
  display: inline-block;
  margin-right: 15rpx;
}

.list-article .article-img {
  background: rgb(245, 245, 245);
  flex: 3;
  text-align: center;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
  padding: 15rpx 0;
  background-clip: content-box;
}
